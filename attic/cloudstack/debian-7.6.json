{
        "variables": {
                "ISO_URL": "http://cdimage.debian.org/debian-cd/7.7.0/amd64/iso-cd/debian-7.7.0-amd64-netinst.iso",
                "ISO": "debian-7.7.0-amd64-netinst.iso",
                "ISO_CHECKSUM": "0b31bccccb048d20b551f70830bb7ad0",
                "ISO_CHECKSUM_TYPE": "md5",
                "image_basename": "debian-7.7",
                "disk_size": "320",
                "ssh_username": "root"

        },
        "builders": [
                {
                        "type": "qemu",
                        "accelerator": "kvm",
                        "format": "qcow2",
                        "shutdown_command": "halt -p",
                        "iso_urls":[
                                "../iso/{{user `ISO`}}",
                                "{{user `ISO_URL`}}"
                        ],
                        "iso_checksum": "{{user `ISO_CHECKSUM`}}",
                        "iso_checksum_type": "{{user `ISO_CHECKSUM_TYPE`}}",
                        "http_directory": "http_directory/debian-7.6/",
                        "http_port_min": 10082,
                        "http_port_max": 10089,
                        "ssh_username": "{{user `ssh_username`}}",
                        "ssh_password": "temp",
                        "ssh_port": 22,
                        "ssh_wait_timeout": "2h",
                        "ssh_host_port_min": 2222,
                        "ssh_host_port_max": 2229,
                        "headless": true,
                        "vnc_port_min": 5900,
                        "vnc_port_max": 5910,
                        "net_device": "virtio-net",
                        "disk_interface": "virtio",
                        "disk_size": "{{user `disk_size`}}000",
                        "boot_command": [
                                "<esc><wait>",
                                "install <wait>",
                                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed_deb.cfg <wait>",
                                "debian-installer=en_US <wait>",
                                "auto <wait>",
                                "locale=en_US <wait>",
                                "kbd-chooser/method=us <wait>",
                                "netcfg/get_hostname={{ .Name }} <wait>",
                                "netcfg/get_domain=vagrantup.com <wait>",
                                "fb=false <wait>",
                                "debconf/frontend=noninteractive <wait>",
                                "console-setup/ask_detect=false <wait>",
                                "console-keymaps-at/keymap=us <wait>",
                                "keyboard-configuration/xkb-keymap=us <wait>",
                                "<enter><wait>"
                        ],

                        "output_directory": "builds/qemu/{{user `image_basename`}}/{{user `image_basename`}}-{{user `disk_size`}}"
                }
        ],

"provisioners": [
        {
          "only": ["qemu"],
          "type": "shell",
          "scripts": ["provisions/debian-7/post-install.sh"]
        }
    ]

}
